{
    "compilerOptions": {
      "lib": ["es2018", "esnext.asynciterable", "dom"],
      "module": "commonjs",
      "removeComments": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "sourceMap": true,
      "target": "es2018",
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true
    },
    "include": ["./**/*.ts"],
    "exclude": [
      "node_modules/**/*",
      ".vscode/**/*",
      "**/__tests__/*"
    ]
  }
